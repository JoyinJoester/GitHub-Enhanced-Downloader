{
  "name": "github-enhanced-downloader",
  "version": "2.1.0",
  "description": "一个强大的Chrome扩展，为GitHub仓库页面添加快速下载按钮，支持镜像加速和智能版本分组",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoyinJoester/GitHub-Enhanced-Downloader.git"
  },
  "keywords": [
    "chrome-extension",
    "github",
    "downloader",
    "mirror",
    "releases",
    "version-grouping"
  ],
  "author": "JoyinJoester",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JoyinJoester/GitHub-Enhanced-Downloader/issues"
  },
  "homepage": "https://github.com/JoyinJoester/GitHub-Enhanced-Downloader#readme",
  "engines": {
    "chrome": ">=88"
  },
  "manifest": {
    "version": 3
  },
  "scripts": {
    "build": "echo 'Building Chrome extension...' && zip -r github-enhanced-downloader.zip . -x '*.git*' 'node_modules/*' '*.md' 'package*.json'",
    "validate": "echo 'Validating manifest...' && node -e \"JSON.parse(require('fs').readFileSync('manifest.json', 'utf8'))\"",
    "test": "npm run validate"
  }
}
